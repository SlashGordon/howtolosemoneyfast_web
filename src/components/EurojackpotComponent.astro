---
// The TypeScript component `EurojackpotComponent` handles all rendering.
// This Astro component only provides the root element for initialization.
---

<div id="eurojackpot-container">
  <!-- The content will be rendered by eurojackpot.ts -->
</div>

<script>
  import { EurojackpotComponentNew } from './eurojackpot';
  
  document.addEventListener('DOMContentLoaded', () => {
    try {
      // Initialize the component, which will populate the container above.
      new EurojackpotComponentNew('eurojackpot-container');
    } catch (error) {
      console.error('Failed to initialize EuroJackpot component:', error);
    }
  });
</script>